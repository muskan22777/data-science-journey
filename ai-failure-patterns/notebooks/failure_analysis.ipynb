# Step 1: Import Libraries
import pandas as pd
import matplotlib.pyplot as plt
import seaborn as sns

# Step 2: Load the dataset
df = pd.read_csv('../data/ai_failure_records.csv')

# Step 3: Quick overview
print(df.head())
print(df.info())

# Step 4: Count failures by category
category_counts = df['failure_category'].value_counts()
print(category_counts)

# Step 5: Visualize failure categories
plt.figure(figsize=(8,5))
sns.barplot(x=category_counts.index, y=category_counts.values)
plt.title('AI Failures by Category')
plt.ylabel('Number of Failures')
plt.xticks(rotation=45)
plt.show()

# Step 6: Dataset vs Model failure heatmap
heatmap_data = df.groupby(['dataset_name','model_name']).size().unstack(fill_value=0)
plt.figure(figsize=(10,6))
sns.heatmap(heatmap_data, annot=True, fmt='d', cmap='Blues')
plt.title('Failure Count: Dataset vs Model')
plt.show()
